<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="amrita.prescribe">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <uses-feature android:name="android.hardware.Camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/prescriptions"
        android:label="@string/app_name"
        android:roundIcon="@drawable/prescriptions"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.RepViewActivity"></activity>
        <activity android:name=".Activity.PresViewActivity" />
        <activity android:name=".Activity.ReportsActivity" />
        <activity android:name=".Activity.PrescriptionsActivity" />
        <activity android:name=".Activity.AddRepActivity" />
        <activity android:name=".Activity.SettingsActivity" />
        <activity android:name=".Activity.AddPrescActivity" />
        <activity android:name=".Activity.DoctorViewActivity" />
        <activity android:name=".Activity.VerifyDoctorActivity" />
        <activity android:name=".Activity.MyQRActivity" />
        <activity android:name=".Activity.ProfileActivity" />
        <activity android:name=".Activity.DashboardActivity" />
        <activity android:name=".Activity.SplashActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.SignupActivity" />
        <activity android:name=".Activity.MainActivity" />
    </application>

</manifest>